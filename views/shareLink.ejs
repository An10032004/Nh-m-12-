<%-include('layouts/header.ejs') %>
<style>
    .w{
        background-color: white;
        padding:40px;
        width: 100%;
        height:500px;
    }
</style>
<div class="container" >

    <div class="w">
        <img src="/<%= group.image %>" alt="" width="200px" height="200px">
        <p><b><%= group.name %></b></p>
        <p><b>Total Members:- </b> <%= totalMembers %></p>
        <% 
            if(available != 0){
                %>
                <p > Available for <b><%= available %></b>Members Only.</p>

                <%
            }
            
            if(isOwner){
                %>
                <p style="color:green">You are admin</p>
                <%
            }else if(isJoined){
                %>
                <p>You have joined this group</p>
                <%
            }else if(available == 0){
                %>
                <p>Group Full</p>
                <%
            }else{

                %>
                <button class="btn btn-primary join-now" data-id="<%= group._id %>">Join</button>
                <%
            }
        %>
    </div>

</div>


<%-include('layouts/footer.ejs') %>