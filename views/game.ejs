<%-include('layouts/header.ejs') %>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }
    .container {
        width: calc(25% - 15px);
        min-width: 300px;
        min-height: 460px;
        margin:5px;
        background-image: linear-gradient(45deg, rgba(255, 255, 255, 0.8) 25%, rgba(255, 255, 255, 0.8) 25%, rgba(255, 255, 255, 0.8) 50%, rgba(255, 255, 255, 0.8) 75%, rgba(169, 145, 145, 0.8));
        background-size: 20px 20px;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        color: black;
        box-sizing: border-box;
        float: left;
    }
    h2 {
        color: #333;
        margin-bottom: 1.5rem;
    }
    #codeInput {
        width: 70%;
        padding: 0.5rem;
        margin-bottom: 1rem;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 1rem;
    }
    button {
        background-color: #4CAF50;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        margin: 0.5rem;
        border-radius: 4px;
        cursor: pointer;
        font-size: 1rem;
        transition: background-color 0.3s;
    }
    button:hover {
        background-color: #45a049;
    }
    #joinGame {
        background-color: #008CBA;
    }
    #joinGame:hover {
        background-color: #007B9E;
    }
    #errorMessage {
        color: red;
        margin-top: 1rem;
    }
</style>
<div class="gap" style="margin: 20px;">
    <div class="container">
        <h2 style="color: black;font-weight: bold;">Chess Game </h2>
        <img src="/font/chessgame.jfif" alt="">
        <input type="text" id="codeInput" placeholder="Enter Chess Game" style="text-align: center;">
            <button id="createGame">Create game</button>
            <button id="joinGame">Join game</button>
            <div style="color: red" id="errorMessage"></div></div>
</div>

<div class="gap" style="margin: 20px;">
    <div class="container" style="background-color: white;">
        <h2 style="color: black;font-weight: bold;">Whac a mole</h2>
        <img src="/font/mario-bg.jpg" alt="">
        <button id="startGame2">Start game</button>
    </div>
</div>

<div class="gap" style="margin: 20px;">
    <div class="container" style="background-color: white;">
        <h2 style="color: black;font-weight: bold;">BreakOut</h2>
        <img src="/font/brick.jfif" alt="">
        <button id="startGame3">Start game</button>
    </div>
</div>


</div>

        <script>
            $('#createGame').on('click', function() {
                window.location.replace('/white?code=' + $('#codeInput').val());
            });
            $('#joinGame').on('click', function() {
                window.location.replace('/black?code=' + $('#codeInput').val());
            });

            $('#startGame2').on('click', function() {
                window.location.replace('/game2');
            });
            $('#startGame3').on('click', function() {
                window.location.replace('/game3');
            });
           

            var urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get('error') == 'invalidCode') {
                $('#errorMessage').text('Invalid invite code');
                
            }
        </script>
<%-include('layouts/footer.ejs') %>
