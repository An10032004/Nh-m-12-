  box-shadow: -5px 0 15px rgba(0, 0, 0, 0.1);
  overflow-y: auto;
  z-index: 9999;
}

.sidebarRight.open {
  right: 0;
}

.close-btn {
  position: absolute;
  top: 10px;
  right: 10px;
  font-size: 45px;
  cursor: pointer;
  background: none;
  border: none;
  color: var(--text-color);
  transition: 0.3s;
  z-index: 999;
}

.close-btn:hover {
  color: var(--primary-color);
  transform: rotate(90deg);
